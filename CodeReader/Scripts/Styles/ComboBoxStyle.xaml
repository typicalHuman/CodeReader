<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CodeReader.Scripts.Styles">
    <Style TargetType="ComboBox" x:Key="CodeComponentCmbBox"
           BasedOn="{StaticResource {x:Type ComboBox}}">
        <Setter Property="MaxDropDownHeight" Value="110"/>
        <Setter Property="FontFamily" Value="{StaticResource Dosis}"/>
        <Setter Property="Margin" Value="5 5"/>
        <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Background}"/>
    </Style>
    

</ResourceDictionary>