<Window x:Class="CodeReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:CodeReader"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:view="clr-namespace:CodeReader.Scripts.View"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
         BorderBrush="#007acb"
        BorderThickness="1.2"
        Title="CodeReader" MinHeight="450" MinWidth="850"
        DataContext="{x:Static local:App.mainVM}"    ui:WindowHelper.UseModernWindowStyle="True" 
        ui:ThemeManager.IsThemeAware="True" ui:TitleBar.ExtendViewIntoTitleBar="True"
       Height="450" Width="800" 
                    xmlns:notifications="clr-namespace:Notifications.Wpf.Controls;assembly=Notifications.Wpf"
        ResizeMode="CanResizeWithGrip"
        gif:ImageBehavior.AnimateInDesignMode="True">

    <Window.Style>
        <Style TargetType="{x:Type Window}" BasedOn="{StaticResource {x:Type Window}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkModeEnabled}" Value="True">
                    <Setter Property="ui:ThemeManager.RequestedTheme" Value="Dark"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsDarkModeEnabled}" Value="False">
                    <Setter Property="ui:ThemeManager.RequestedTheme" Value="Light"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--#region NotificationsArea-->
        <!--Area where notifications will appear-->
        <notifications:NotificationArea  x:Name="NotificationsArea"   Panel.ZIndex="4" 
                                         Position="BottomRight" MaxItems="1" Grid.Row="1"/>
        <!--#endregion-->

        <DockPanel Background="Transparent">
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <ui:TitleBarButton Height="38" Width="60" 
                               VerticalAlignment="Bottom" Margin="2 0">
                    <Image gif:ImageBehavior.AutoStart="False"
                           RenderOptions.BitmapScalingMode="HighQuality" 
                           Source="pack://application:,,,/Images/house.png"
                           x:Name="TitleGifImage">
                    </Image>
                </ui:TitleBarButton>
                <TextBlock FontSize="25" Text="CodeReader" 
                           FontFamily="{StaticResource TitleFont}"
                        Margin="10 0 0 -5" VerticalAlignment="Bottom"/>
            </StackPanel>
           <!--#region ThemeSwitcher-->
            <ui:ToggleSwitch OnContent="Dark mode" OffContent="Light mode"  
                             WindowChrome.IsHitTestVisibleInChrome="True"
                            IsOn="{Binding IsDarkModeEnabled,UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Top" Margin="0 0 170 0" 
                             HorizontalAlignment="Right" FontFamily="{StaticResource RegularFont}">
            </ui:ToggleSwitch>
            <!--#endregion-->
        </DockPanel>

        <Grid Grid.Row="1" Name="codeReaderPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <view:CodeTree CodeComponents="{Binding CodeComponents, UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Margin="0 10 0 10"
                           TargetComponent="{Binding ElementName=extendedPanel, Path=DataContext.CurrentComponent, UpdateSourceTrigger=PropertyChanged,
                Mode=OneWay}"/>
                <GridSplitter Grid.Column ="1" Width="4" 
                              DragDelta="SplitterDragDelta"
                              Background="{StaticResource GridSplitterGray}"
                      ShowsPreview="True" Grid.Row="1" Margin="10" Name="Splitter"
                HorizontalAlignment="Center" VerticalAlignment="Stretch">
                <GridSplitter.Template>
                    <ControlTemplate TargetType="GridSplitter">
                        <Border Background="{TemplateBinding Background}"
                                Height="6"
                            BorderThickness="0 1 0 0"
                            CornerRadius="3" >
                            <Border.LayoutTransform>
                                <RotateTransform Angle="90"/>
                            </Border.LayoutTransform>
                        </Border>
                    </ControlTemplate>
                </GridSplitter.Template>
            </GridSplitter>
            <view:ExtendedPanel Grid.Column="2" x:Name="extendedPanel"/>
        </Grid>
    </Grid>
</Window>