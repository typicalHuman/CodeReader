<Window x:Class="CodeReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:CodeReader"
        xmlns:view="clr-namespace:CodeReader.Scripts.View"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="CodeReader" MinHeight="450" MinWidth="800"
        DataContext="{x:Static local:App.mainVM}"    ui:WindowHelper.UseModernWindowStyle="True" 
        ui:ThemeManager.IsThemeAware="True" ui:TitleBar.ExtendViewIntoTitleBar="True"
       Height="450" Width="800" FontFamily="pack://application:,,,/Fonts/#Dosis"
        ResizeMode="CanResizeWithGrip"
       >
    <Window.Style>
        <Style TargetType="{x:Type Window}" BasedOn="{StaticResource {x:Type Window}}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDarkModeEnabled}" Value="True">
                    <Setter Property="ui:ThemeManager.RequestedTheme" Value="Dark"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsDarkModeEnabled}" Value="False">
                    <Setter Property="ui:ThemeManager.RequestedTheme" Value="Light"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Background="Transparent">
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <ui:TitleBarButton Height="40" Width="60"
                               VerticalAlignment="Center" Margin="0 -2">
                    <Image 
                           RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDarkModeEnabled}" Value="True">
                                        <Setter Property="Source" Value="pack://application:,,,/Images/logo.png" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsDarkModeEnabled}" Value="False">
                                        <Setter Property="Source" Value="pack://application:,,,/Images/darkLogo.png" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </ui:TitleBarButton>
                <TextBlock FontSize="25" Text="CodeReader" 
                        Margin="10 0 0 0" VerticalAlignment="Center"/>
            </StackPanel>
            <ui:ToggleSwitch OnContent="Dark mode" OffContent="Light mode"  
                             WindowChrome.IsHitTestVisibleInChrome="True"
                            IsOn="{Binding IsDarkModeEnabled,UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Top" Margin="0 0 170 0" 
                             HorizontalAlignment="Right" FontFamily="pack://application:,,,/Fonts/#Dosis">
            </ui:ToggleSwitch>
        </DockPanel>

        <Grid Grid.Row="1" Name="codeReaderPanel">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <view:CodeTree CodeComponents="{Binding CodeComponents}" Margin="0 10 0 10"/>
            <GridSplitter Grid.Column ="1" Background="#686868" Width="4"
                      ShowsPreview="True" Grid.Row="1" Margin="10" Name="Splitter"
                HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
            <view:ExtendedPanel Grid.Column="2"/>
        </Grid>

    </Grid>
</Window>
