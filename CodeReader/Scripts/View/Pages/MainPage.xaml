                <ListBoxItem MaxHeight="75" Height="75" Background="Transparent">
                    <StackPanel Orientation="Horizontal">
                        <Image VerticalAlignment="Center" HorizontalAlignment="Left"
                                   RenderOptions.BitmapScalingMode="HighQuality" 
                                Source="C:\Users\HP\Desktop\source-code.png"
                                Stretch="Uniform" Height="50" Width="50"/>
                        <StackPanel Orientation="Vertical"   Margin="5 0 0 0" >
                            <TextBlock Text="Title"
                                       VerticalAlignment="Center" 
                                       FontSize="25"
                                       FontWeight="Bold"/>
                            <TextBlock Text="C:\Users\HP\Desktop" FontStyle="Italic"
                                   FontSize="14" Foreground="{StaticResource GridSplitterGray}"/>
                        </StackPanel>
                     
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem Background="Transparent">Second</ListBoxItem>
                <ListBoxItem Background="Transparent">third</ListBoxItem>
